/* components/welcome/index.wxss */
.welcome-page {
  height: 100%;
  background: #E6222A;
}

.welcome-page swiper {
  height: 100%;
}

.welcome-page__img {
  width: 100%;
  height: 100%;
  z-index: -1;
}

.welcome-page__map {
  box-sizing: border-box;
  position: absolute;
  background: #ffffff;
  opacity: 0.7;
  width: 640rpx;
  height: 800rpx;
  bottom: 50%;
  margin-bottom: -340rpx;
  left: 50%;
  margin-left: -320rpx;
  z-index: 2;
  padding: 40rpx;
  text-align: center;
}

.welcome-page__map .title {
  margin-top: 40rpx;
  font-size: 20px;
  font-weight: 300;
}

.welcome-page__map .welcome {
  margin-top: 20rpx;
  font-size: 30px;
  font-weight: 300;
}

.welcome-page__map .time, .welcome-page__map .addr {
  font-size: 14px;
  font-weight: 300;
}

.welcome-page__map .map {
  margin-top: 40rpx;
  z-index: 3;
  width: 100%;
  height: 300rpx;
}

.welcome-page__map .navigate{
  width: 80rpx;
  background: grey;
  color: #fff;
  float: right;
  padding: 10rpx;
}